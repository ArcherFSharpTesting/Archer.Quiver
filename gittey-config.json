{
    "branchPrefix": {
        "separator": "",
        "validator": "",
        "prefixes": {}
    },
    "commitPrefix": {
        "separator": " ",
        "validator": "^.{1,45}$",
        "prefixes": {
            "feat:": "Feature work",
            "fix:": "Bug fix",
            "refactor:": "Refactoring",
            "test:": "Test",
            "chore:": "Chore",
            "docs:": "Documentation updated/added",
            "style:": "Code style",
            "build:": "Build",
            "ci:": "CI configuration",
            "perf:": "Performance improvement"
        }
    },
    "verboseMode": false,
    "aliases": [
        {
            "name": "test",
            "command": "cls; gittey check && gittey cover:convert && gittey commit"
        },
        {
            "name": "check",
            "command": "dotnet-coverage collect -f xml -s ./coverage.settings.xml dotnet test"
        },
        {
            "name": "cover:convert",
            "command": "npx rimraf ./coverage/ && reportgenerator -reports:./output.xml -targetdir:coverage"
        },
        {
            "name": "push",
            "command": "gittey test && git push"
        },
        {
            "name": "start",
            "command": "git pull && gittey push && start ./Archer.Quiver.sln"
        },
        {
            "name": "build",
            "command": "dotnet build"
        },
        {
            "name": "undo",
            "command": "git reset . && git checkout . && git clean -xfd && dotnet restore && dotnet build"
        }
    ],
    "collaborators": []
}